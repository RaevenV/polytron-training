<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <% if (addOrEdit === "add") { %>
    <title>Add a company!</title>
    <% } else if (addOrEdit === "edit") { %>
    <title>Edit company!</title>
    <% } %>
    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon" />
    <%- include('../partial/scripts/include_links') %>
  </head>
  <body class="relative min-h-screen">
    <%- include('../partial/header') %>

    <div
      class="px-[24px] py-[100px] sm:px-[60px] md:px-[80px] lg:px-[120px] flex justify-start items-start flex-col"
    >
      <% if (addOrEdit === "add") { %>
      <h2 class="text-[20px]">Add a company!</h2>

      <hr class="h-2" />

      <form
        action="/company/addEdit/insert"
        id="addCompanyForm"
        method="post"
        class="mt-4 w-full flex flex-col justify-start items-center gap-y-4"
      >
        <div class="w-full flex flex-row justify-between items-start gap-x-2">
          <div class="md:text-nowrap md:text-[16px] text-[13px]">
            Company Name:
          </div>
          <div class="w-full">
            <input
              type="text"
              class="form-control w-full"
              placeholder="Company name"
              name="company_name"
              id="company_name"
              value="<%= company ? company.company_name : '' %>"
            />
            <% if (errors && errors.find(e => e.includes('Company name'))) { %>
            <div class="text-red-500 text-sm mt-1">
              Please enter a valid company name
            </div>
            <% } %>
          </div>
        </div>

        <div class="w-full flex flex-row justify-between items-start gap-x-2">
          <div class="md:text-nowrap md:text-[16px] text-[13px]">q1 9
            Company Address:
          </div>
          <div class="w-full">
            <textarea
              class="form-control w-full"
              placeholder="Company address"
              name="company_address"
              id="company_address"
            ><%= company ? company.company_address : '' %></textarea>
            <% if (errors && errors.find(e => e.includes('Company address'))) { %>
            <div class="text-red-500 text-sm mt-1">
              Please enter a valid company address
            </div>
            <% } %>
          </div>
        </div>

        <div class="w-full flex flex-row justify-between items-start gap-x-2">
          <div class="md:text-nowrap md:text-[16px] text-[13px]">
            Company Phone:
          </div>
          <div class="w-full">
            <input
              type="text"
              class="form-control w-full"
              placeholder="Company phone"
              name="company_phone"
              id="company_phone"
              value="<%= company ? company.company_phone : '' %>"
            />
            <% if (errors && errors.find(e => e.includes('Company phone'))) { %>
            <div class="text-red-500 text-sm mt-1">
              Please enter a valid phone number
            </div>
            <% } %>
          </div>
        </div>

        <div class="w-full flex justify-between items-center mt-4">
          <a onclick="window.history.back();" class="btn btn-primary">Back</a>
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>

      <% } else if (addOrEdit === "edit" && company != null) { %>
      <h2 class="text-[20px]">Edit company!</h2>
      <hr class="h-2" />

      <form
        action="/company/addEdit/edit"
        id="editCompanyForm"
        method="post"
        class="mt-4 w-full flex flex-col justify-start items-center gap-y-4"
      >
        <input
          type="hidden"
          name="company_id"
          value="<%= company[0].company_id %>"          
        />

        <div class="w-full flex flex-row justify-between items-start gap-x-2">
          <div class="md:text-nowrap md:text-[16px] text-[13px]">
            Company Name:
          </div>
          <div class="w-full">
            <input
              type="text"
              class="form-control w-full"
              name="company_name"
              id="company_name"
              value="<%= company[0].company_name %>"          
            />
            <% if (errors && errors.find(e => e.includes('Company name'))) { %>
            <div class="text-red-500 text-sm mt-1">
              Please enter a valid company name
            </div>
            <% } %>
          </div>
        </div>

        <div class="w-full flex flex-row justify-between items-start gap-x-2">
          <div class="md:text-nowrap md:text-[16px] text-[13px]">
            Company Address:
          </div>
          <div class="w-full">
            <textarea
          class="form-control w-full"
          name="company_address"
          id="company_address"
        ><%= company[0].company_address %></textarea>
            <% if (errors && errors.find(e => e.includes('Company address'))) { %>
            <div class="text-red-500 text-sm mt-1">
              Please enter a valid company address
            </div>
            <% } %>
          </div>
        </div>

        <div class="w-full flex flex-row justify-between items-start gap-x-2">
          <div class="md:text-nowrap md:text-[16px] text-[13px]">
            Company Phone:
          </div>
          <div class="w-full">
            <input
              type="text"
              class="form-control w-full"
              name="company_phone"
              id="company_phone"
              value="<%= company[0].company_phone %>"
            />
            <% if (errors && errors.find(e => e.includes('Company phone'))) { %>
            <div class="text-red-500 text-sm mt-1">
              Please enter a valid phone number
            </div>
            <% } %>
          </div>
        </div>

        <div class="w-full flex justify-between items-center mt-4">
          <a onclick="window.history.back();" class="btn btn-primary">Back</a>
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
      <% } %> 
    </div>

    <%- include('../partial/footer') %>
    <%- include('../partial/scripts/include_scripts') %>

    
  </body>
</html>
